@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewData["Title"] - ProyectoColegio</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="/css/sb-admin-2.css" rel="stylesheet">
    @RenderSection("Styles", required: false)
</head>
<body id="page-top">
    <div id="wrapper">
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Home")">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Home")">
                    <i class="fas fa-fw fa-home"></i>
                    <span>Home</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Privacy", "Home")">
                    <i class="fas fa-fw fa-lock"></i>
                    <span>Privacy</span>
                </a>
            </li>
            @if (User.IsInRole("Docente"))
            {
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Notas", "Docentes")">
                        <i class="fas fa-fw fa-user-graduate"></i>
                        <span>Notas</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "ClasesEstudiantes")">
                        <i class="fas fa-fw fa-user-graduate"></i>
                        <span>Detalles de cada clase</span>
                    </a>
                </li>
            }
            @if (User.IsInRole("Administrador"))
            {
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "ClasesEstudiantes")">
                        <i class="fas fa-fw fa-user-graduate"></i>
                        <span>Detalles de cada clase</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Clases")">
                        <i class="fas fa-fw fa-book"></i>
                        <span>Clases</span>
                    </a>
                </li>
            


                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Cursos")">
                        <i class="fas fa-fw fa-graduation-cap"></i>
                        <span>Cursos</span>
                    </a>
                </li>
            }
            @if (User.IsInRole("Estudiante"))
            {
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Horario", "Usuarios")">
                        <i class="fas fa-fw fa-hourglass"></i>
                        <span>Horario</span>
                    </a>
                </li>


                <li class="nav-item">
                    <a class="nav-link" asp-controller="Usuarios" asp-action="DetallesCursos" asp-route-id="@User.FindFirstValue(ClaimTypes.NameIdentifier)">
                        <i class="fas fa-fw fa-graduation-cap"></i>
                        <span>Cursos</span>
                    </a>
                </li>
            }

            @if (User.IsInRole("Administrador"))
            {
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Docentes")">
                        <i class="fas fa-fw fa-chalkboard-teacher"></i>
                        <span>Docentes</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Usuarios")">
                        <i class="fas fa-fw fa-users"></i>
                        <span>Estudiantes</span>
                    </a>
                </li>
            
            }
            @if (User.IsInRole("Estudiante"))
            {
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Seccion", "Usuarios")">
                        <i class="fas fa-fw fa-users"></i>
                        <span>Seccion</span>
                    </a>
                </li>
            }



            <!-- ... Otros elementos del menú ... -->
        </ul>
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>
                    <ul class="navbar-nav ml-auto">
                        <div class="topbar-divider d-none d-sm-block"></div>
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-user-shield" style="font-size:25px;font-weight:bold"></i>
                                <span>
                                    <br />
                                    <p class="mr-2 d-none d-lg-inline text-gray-600 small">
                                        &nbsp<partial name="_LoginPartial" />
                                    </p>

                                    @if (User.IsInRole("Administrador"))
                                    {
                                        <p data-test="tipoUser" class="small" style="font-weight:bold">
                                            &nbsp Administrador
                                        </p>
                                    }
                                    @if (User.IsInRole("Docente"))
                                    {
                                        <p data-test="tipoUser" class="small" style="font-weight:bold">
                                            &nbsp Docente
                                        </p>
                                    }
                                    @if (User.IsInRole("Estudiante"))
                                    {
                                        <p data-test="tipoUser" class="small" style="font-weight:bold">
                                            &nbsp Estudiante
                                        </p>
                                    }
                                </span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                 aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="@Url.Action("Logout","Access")">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Salir
                                </a>
                            </div>
                        </li>
                    </ul>
                </nav>
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; UPN_2023-2 (DIARS)</span>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <!-- Contenido del modal... -->
    </div>
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.6.2/js/bootstrap.min.js"></script>
    <script src="/js/sb-admin-2.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
